{
  "name": "art-frames",
  "image": "mcr.microsoft.com/devcontainers/javascript-node:20",
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.defaultProfile.windows": "PowerShell"
      }
    }
  },
  "forwardPorts": [3000],
  "portsAttributes": {
    "3000": {
      "label": "Next.js Dev Server",
      "onAutoForward": "openPreview"
    }
  },
  "remoteEnv": {
    "PATH": "/home/node/.local/bin:${containerEnv:PATH}"
  },
  "onCreateCommand": "mkdir -p /home/node/.local/bin && corepack enable --install-directory /home/node/.local/bin && corepack prepare pnpm@latest --activate",
  "postCreateCommand": "pnpm install",
  "postStartCommand": "pnpm dev"
}